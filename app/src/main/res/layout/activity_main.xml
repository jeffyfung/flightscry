<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#66ACD1E1"
    tools:context=".MainActivity">

    <net.skyscanner.backpack.card.BpkCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cornerStyle="large"
        app:elevationLevel="focused"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.282">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <net.skyscanner.backpack.text.BpkText
                style="@style/bpkTextHeading1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Departure"
                android:textAlignment="center"
                android:textColor="#5019B1"
                android:textFontWeight="1000"
                app:fontFamily="sans-serif-smallcaps" />

            <net.skyscanner.backpack.text.BpkText
                style="@style/bpkTextBodyDefault"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Airport Code: HKG" />

            <net.skyscanner.backpack.text.BpkText
                style="@style/bpkTextBodyDefault"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Departure Time: 11:25 (HKT)" />
        </LinearLayout>

    </net.skyscanner.backpack.card.BpkCardView>

    <net.skyscanner.backpack.card.BpkCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cornerStyle="large"
        app:elevationLevel="focused"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <net.skyscanner.backpack.text.BpkText
                style="@style/bpkTextHeading1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Flight Information"
                android:textAlignment="center"
                android:textColor="#5019B1"
                android:textFontWeight="1000"
                app:fontFamily="sans-serif-smallcaps" />

            <net.skyscanner.backpack.text.BpkText
                style="@style/bpkTextBodyDefault"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Flight No.: CX770" />
        </LinearLayout>
    </net.skyscanner.backpack.card.BpkCardView>

    <net.skyscanner.backpack.card.BpkCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cornerStyle="large"
        app:elevationLevel="focused"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.714">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <net.skyscanner.backpack.text.BpkText
                style="@style/bpkTextHeading1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Arrival"
                android:textAlignment="center"
                android:textColor="#5019B1"
                android:textFontWeight="1000"
                app:fontFamily="sans-serif-smallcaps" />

            <net.skyscanner.backpack.text.BpkText
                style="@style/bpkTextBodyDefault"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Airport Code: LAX" />

            <net.skyscanner.backpack.text.BpkText
                style="@style/bpkTextBodyDefault"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Arrival Time: 16:55 (PST)" />
        </LinearLayout>

    </net.skyscanner.backpack.card.BpkCardView>
</androidx.constraintlayout.widget.ConstraintLayout>